{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gcc build",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-o",
        "${workspaceFolder}/${input:programName}",
        "${workspaceFolder}/${input:programName}.c",
        "-l${input:libraryName}"
      ],
      "group": "build"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "inputs": [
    {
      "id": "programName",
      "type": "promptString",
      "description": "Enter the program name"
    },
    {
      "id": "libraryName",
      "type": "promptString",
      "description": "Enter the library name (without 'lib' or file extension)"
    }
  ]
}