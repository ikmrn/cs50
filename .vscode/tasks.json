{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gcc build",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-o",
        "${workspaceFolder}/${input:programName}",
        "${workspaceFolder}/${input:programName}.c",
        "-l${input:libraryName}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "programName",
      "type": "promptString",
      "description": "Enter the program name"
    },
    {
      "id": "libraryName",
      "type": "promptString",
      "description": "Enter the library name (without 'lib' or file extension)"
    }
  ]
}
